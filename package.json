{
  "name": "micro-r",
  "version": "2.0.4",
  "description": "file structure based router for micro",
  "main": "index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "mocha test --recursive",
    "test:watch": "mocha test --watch --recursive",
    "coverage": "nyc npm run test",
    "prepare": "npm run build && npm run test"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "test",
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ]
  },
  "author": {
    "name": "Oleg Kamlowski",
    "email": "n@sovrin.de"
  },
  "files": [
    "index.js",
    "dist",
    "README.md"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sovrin/micro-r.git"
  },
  "keywords": [
    "micro",
    "router"
  ],
  "devDependencies": {
    "@types/node": "^14.6.2",
    "micro": "^9.3.4",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "supertest": "^4.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
