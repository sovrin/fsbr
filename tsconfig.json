{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist/cjs",
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "sourceMap": false,
    "baseUrl": "./src"
  },
  "exclude": [
    "test/**"
  ],
  "include": [
    "src/**/*"
  ]
}
